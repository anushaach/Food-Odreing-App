<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="30dp"
    tools:context=".MainMenu">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1289dp"
        android:layout_height="1193dp"
         android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714"
        app:srcCompat="@drawable/img4"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="275dp"
        android:layout_height="390dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@drawable/background_color"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        app:flow_verticalBias="0.498"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="Food Shop"
            android:textAlignment="center"
            android:textColor="@color/Red"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Eat Homemade Anywhere!"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Signwithemail"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btnred"
            android:drawableLeft="@drawable/email"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="30dp"
            android:text="SignIn with Email" />

        <Button
            android:id="@+id/SignwithPhone"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnblueish"
            android:drawableLeft="@drawable/phone"
            android:padding="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:text="SignIn with Phone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="clip_horizontal"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hr"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#3E3D3D" >
            </TableRow>

                <TextView
                    android:id="@+id/OR"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center"
                    android:text="OR"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="#131313" />

            <TableRow
                android:id="@+id/dr"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#474646"/>


        </LinearLayout>
        <Button

            android:id="@+id/SignUp"
            android:layout_width="200dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:text="Signup"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>